<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maryow.assessment">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.movie.SearchMovieActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.movie.MovieReviewActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.movie.MovieDetailActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.movie.MovieActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.news.SearchActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.news.NewsDetailActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.news.NewsActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.news.SourceActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.news.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.news.MainActivity" />
    </application>

</manifest>