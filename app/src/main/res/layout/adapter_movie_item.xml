<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvNews"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



            <RelativeLayout
                android:id="@+id/rlAuthorContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/ivMovie"
                    android:src="@drawable/ic_movie_filter_black_24dp"
                    android:scaleType="fitCenter"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_margin="15dp"
                    />

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/ivMovie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tvMovieTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Stan Lee's Annihilator"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_below="@id/tvMovieTitle"
                        android:id="@+id/tvMovieReleaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2018-12-25"
                        android:textColor="@color/colorGrey"
                        android:textSize="18dp"
                         />

                    <TextView
                        android:drawableStart="@drawable/ic_star_black_24dp"
                        android:layout_below="@id/tvMovieReleaseDate"
                        android:id="@+id/tvMovieRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7.8"
                        android:drawablePadding="5dp"
                        android:textColor="@color/colorGrey"
                        android:textSize="18dp"
                        android:textStyle="bold"
                         />




                </RelativeLayout>



            </RelativeLayout>





    </androidx.cardview.widget.CardView>



</LinearLayout>