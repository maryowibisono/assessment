<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">


    <FrameLayout
        android:id="@+id/flHeaderHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/bg_home_header">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_marginTop="70dp"
                    android:textStyle="bold"
                    android:textSize="28dp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_below="@id/tvTitle"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorGreyLight"
                    android:text="Mohammad Aryo Wibisono"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="00dp"
                    android:textSize="15dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorGreyLight"
                    android:text="@string/app_version"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>



    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/flHeaderHome"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/llNews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_right_bottom"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_receipt_black_24dp" />

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="NEWS"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMovie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_bottom"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_movie_filter_black_24dp" />

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="MOVIES"
                android:textColor="@color/colorPrimaryYellow"
                android:textSize="25dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>