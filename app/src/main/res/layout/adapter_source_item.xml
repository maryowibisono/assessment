<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingBottom="10dp"
        android:id="@+id/rlSourceContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civSourceItem"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/defaultnews"
        app:civ_border_color="#E5E5E5"
        app:civ_border_width="1dp" />

    <RelativeLayout
        android:layout_toStartOf="@id/ivChevron"
        android:id="@+id/rlSourceItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/civSourceItem">

        <TextView
            android:id="@+id/tvSourceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ABC News"
            android:textColor="@color/colorGreyDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSourceDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSourceName"
            android:layout_marginTop="5dp"
            android:maxLength="77"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:text="ABC Newds addsadsads adsada sdsadsadsas sadsadsadads asdsadsadsads adsad asdasdas dsadsadsadass"
            android:textColor="@color/colorGrey"
            android:textSize="17dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivChevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_chevron_right_black_24dp" />

    </RelativeLayout>

    <View

        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        />
</LinearLayout>