<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvNews"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_view"
        android:orientation="vertical"
        android:weightSum="4">

        <ImageView
            android:id="@+id/ivNews"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultnews"
            android:layout_width="match_parent"
            android:layout_height="90dp"/>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:maxLength="30"
            android:ellipsize="end"
            android:textAlignment="textStart"
            android:text="News Title"
            android:textColor="@color/colorGreyDark"
            android:textStyle="bold"
            android:id="@+id/tvNewsTitle"
            android:layout_width="match_parent"
            android:textSize="12dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="textStart"
            android:maxLength="50"
            android:ellipsize="end"
            android:text="Libra hasn’t even officially debuted on Facebook yet, but the highly anticipated cryptocurrency has already gotten a ton of interests—from scammers. In fact, it’s hard to tell who is more interested in Libra at this point: those looking to make a quick buck f…"
            android:textColor="@color/colorGrey"
            android:id="@+id/tvNewsContent"
            android:layout_width="match_parent"
            android:textSize="10dp"
            android:layout_height="wrap_content"/>


        <View
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGreyLight">

        </View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/ibShareNews"
                    android:background="@color/colorWhite"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_share_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>